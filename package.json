{
  "name": "@neabyte/secure-jwt",
  "description": "Secure JWT with AES-256-GCM & ChaCha20-Poly1305 encryption, built-in caching, tamper detection, and TypeScript support",
  "version": "1.4.2",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "jwt",
    "secure",
    "encryption",
    "aes-256-gcm",
    "authentication",
    "token",
    "security",
    "caching",
    "performance",
    "lru-cache",
    "typescript",
    "esm",
    "commonjs",
    "node"
  ],
  "engines": {
    "node": ">=v18.0.0"
  },
  "license": "MIT",
  "author": {
    "name": "NeaByteLab",
    "email": "me@neabyte.com",
    "url": "https://github.com/NeaByteLab"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NeaByteLab/Secure-JWT.git"
  },
  "homepage": "https://github.com/NeaByteLab/Secure-JWT#readme",
  "bugs": {
    "url": "https://github.com/NeaByteLab/Secure-JWT/issues"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
    "build": "tsc && tsc-alias -f -fe .js && npm run minify",
    "minify": "find dist -name '*.js' -exec terser {} --compress --mangle -o {} \\;",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src/**/**/**/*.ts",
    "lint:fix": "eslint src/**/**/**/*.ts --fix",
    "format": "prettier --write src/**/**/**/*.ts",
    "format:check": "prettier --check src/**/**/**/*.ts",
    "benchmark": "npx tsx src/scripts/Benchmark.ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-sonarjs": "^3.0.5",
    "jest": "^30.1.3",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.6.2",
    "terser": "^5.44.0",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
